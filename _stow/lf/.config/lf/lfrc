# DOCS: https://github.com/gokcehan/lf/blob/master/doc.md
# EXAMPLE: https://github.com/gokcehan/lf/blob/master/etc/lfrc.example

set hidden
set icons
set number
set previewer ~/bin/lf-previewer
set relativenumber
set shell zsh
set incsearch
set smartcase
set wrapscan false

# use smart previewer for files instead of `less`
map i $~/bin/lf-previewer "$f"
